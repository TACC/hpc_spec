#!/bin/bash

export clonedate=`date "+%Y%m%d"`
cd ../SOURCES
if [ -d "gnuparallel-git${clonedate}" ] ; then
  rm -rf gnuparallel-git${clonedate}
fi

git clone \
  git://git.savannah.gnu.org/parallel.git \
  gnuparallel-git${clonedate}
tar fcz gnuparallel-git${clonedate}.tgz gnuparallel-git${clonedate}

